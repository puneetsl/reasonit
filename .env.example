# LLM Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Model Settings
PRIMARY_MODEL=gpt-4o-mini
FALLBACK_MODEL=gpt-4
COACH_MODEL=gpt-4
TEMPERATURE=0.7
MAX_TOKENS=2000

# Cost Management
MAX_DAILY_COST=10.0
MAX_QUERY_COST=0.50
COST_ALERT_THRESHOLD=8.0
CONFIDENCE_THRESHOLD=0.7

# Rate Limiting
REQUESTS_PER_MINUTE=150
REQUESTS_PER_DAY=10000
BACKOFF_FACTOR=2.0
MAX_RETRIES=3

# Memory Configuration
MEMORY_MAX_ENTRIES=10000
MEMORY_CONSOLIDATION_INTERVAL=3600
MEMORY_SIMILARITY_THRESHOLD=0.8
MEMORY_STORAGE_PATH=./memory/
ENABLE_MEMORY_PERSISTENCE=true

# Tool Configuration
ENABLE_PYTHON_EXECUTION=true
ENABLE_WEB_SEARCH=true
ENABLE_CALCULATOR=true
ENABLE_KNOWLEDGE_BASE=true
PYTHON_EXECUTION_TIMEOUT=30
SEARCH_RESULTS_LIMIT=10

# Search Configuration
SEARCH_API_KEY=your-search-api-key-here
SEARCH_ENGINE=duckduckgo
SEARCH_TIMEOUT=10

# Reasoning Configuration
DEFAULT_REASONING_STRATEGY=adaptive
MAX_REASONING_DEPTH=10
MAX_THINKING_TIME=300
ENABLE_SELF_CONSISTENCY=true
NUM_CONSISTENCY_PATHS=3

# Context Variants
ENABLE_MINIFIED_CONTEXT=true
ENABLE_ENRICHED_CONTEXT=true
ENABLE_SYMBOLIC_CONTEXT=true
ENABLE_EXEMPLAR_CONTEXT=true

# Constitutional AI
ENABLE_CONSTITUTIONAL_REVIEW=true
BIAS_DETECTION_THRESHOLD=0.8
SAFETY_CHECK_ENABLED=true

# Reflexion Memory
ENABLE_REFLEXION=true
REFLECTION_THRESHOLD=0.6
MAX_REFLECTION_ITERATIONS=3
LEARNING_RATE=0.1

# MCTS Configuration
MCTS_SIMULATIONS=100
MCTS_EXPLORATION_CONSTANT=1.414
MCTS_MAX_DEPTH=20
MCTS_TIME_LIMIT=60

# Tree of Thoughts Configuration
TOT_BREADTH=3
TOT_DEPTH=5
TOT_BEAM_WIDTH=3

# Planning Configuration
ENABLE_PLANNING=true
MAX_PLAN_DEPTH=5
CHECKPOINT_INTERVAL=10

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/reasonit.log
LOG_FORMAT=json
ENABLE_DETAILED_LOGGING=false

# Development Settings
DEBUG=false
ENABLE_PROFILING=false
CACHE_ENABLED=true
CACHE_TTL=3600

# API Configuration (if using FastAPI)
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
ENABLE_CORS=true

# Database Configuration (if needed for advanced memory)
DATABASE_URL=sqlite:///./memory/reasonit.db
DATABASE_POOL_SIZE=5

# Monitoring and Telemetry
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_TRACING=false

# Security
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1
RATE_LIMIT_STORAGE=memory

# Feature Flags
ENABLE_EXPERIMENTAL_FEATURES=false
ENABLE_PARALLEL_REASONING=true
ENABLE_ADAPTIVE_TIMEOUT=true
ENABLE_COST_OPTIMIZATION=true